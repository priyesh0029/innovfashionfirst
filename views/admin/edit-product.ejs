<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


  
 
</head>
<body>
  


<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Edit Product</h2>
        <form
          action="/admin/edit-products/<%= response._id %>"
          method="post"
          enctype="multipart/form-data"
        >
        

          <label for="">Gender</label>
          <select class="form-select" name="gender" id="gender">
            <option value="<%= response.gender %>"><%= response.gender %></option>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
            <option value="Kids">Kids</option>
            
          </select>

          <label for="">Category</label>
          <select class="form-select" name="category" id="category">
            <option value="<%= response.catagory %>"><%= response.catagory %></option>
            <option value="Topwear"  >Topwear</option>
            <option value="Bottomwear">Bottomwear</option>
            <option value="Footwear">Footwear</option>
            
          </select>

          <label for="">sub-category</label> 
          <select class="form-select" name="subcategory" id="subcategory" >
            <option value="<%=response.sub_catagory%>"><%= response.sub_catagory %></option>
          </select>

          <label for="">Prodcut Name</label>
          <input type="text" name="name" value="<%= response.product_name %>" class="form-control" />
          <label for="">Description</label>
          <input type="text" name="description" class="form-control" value="<%= response.description %>" />

          <label for="">Price</label>
          <input type="text" name="price" class="form-control" value="<%= response.price %>" />

          <% response.product_details.forEach(function(item) { %>
          <label for="">quantity</label>
          <input type="text" name="quantity" class="form-control" value="<%= item.quantity %>" />

          <label for="">size</label>
          <input type="text" name="size" class="form-control" value="<%= item.size %>" /> 

          <label for="">color</label>
          <input type="text" name="color" class="form-control" value="<%= item.color %>" />

          <% }) %>

          <label for="">Brand</label>
          <input type="text" name="brand" class="form-control" value="<%= response.brand %>" />
          
          <img src="/uploads/<%=response.Image%>" alt="" style="width:100px;height:auto" id="imageEdit" class="mt-3 mb-3">

          <label for="">Image</label>
          <input type="file" name="file2" class="form-control" onchange="changeImage(event)"/>

          
          <button type="submit" class="btn btn-success mt-4 mb-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>


  <script src="/admin-assets/js/ajaxgetsubcat.js"></script>
  
  <script>
    function changeImage(events)
    {
      document.getElementById('imageEdit').src = URL.createObjectURL(events.target.files[0])
    }
  </script>

</body>
</html>