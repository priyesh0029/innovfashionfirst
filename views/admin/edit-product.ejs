<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Add Product</h2>
          <form
            action="/admin/add-product"
            method="post"
            enctype="multipart/form-data"
          >
          <% response.forEach(function(item,index) { %>
            <label for="">Prodcut Name</label>
            <input type="text" name="name" value="<%= item.product_name %>" class="form-control" />
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" />
  
            <label for="">Price</label>
            <input type="text" name="price" class="form-control" />
            
            <% item.product_details.forEach(function(productDetails) { %>
            <label for="">quantity</label>
            <input type="text" name="<%= productDetails.quantity %>" class="form-control" />
  
            <label for="">size</label>
            <input type="text" name="<%= productDetails.size %>" class="form-control" /> 
  
            <label for="">color</label>
            <input type="text" name="<%= productDetails.color %>" class="form-control" />
            <% }); %>
           
            <label for="">Gender</label>
            <select class="form-select" name="gender" id="cars">
            
              <option><%= item.gender %></option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Others">Others</option>
              
            </select>
           
            <label for="">Brand</label>
            <input type="text" name="brand" class="form-control" />
          
            <label for="">Category</label>
            <select class="form-select" name="category" id="cars">
  
              <% category.forEach(function(item) { %>
              <option value="<%=item %>"><%=item %></option>
              <%});
              %>
            </select>
            <label for="">sub-category</label> 
            <select class="form-select" name="subcategory" id="cars">
              
              <% subcategory.forEach(function(item) { %>
                <option value="<%=item %>"><%=item %></option>
                <%});
                %>
            </select>
  
            <label for="">Image</label>
            <input type="file" name="Image" class="form-control" />
            <% }) %>
            <button type="submit" class="btn btn-success mt-4 mb-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>