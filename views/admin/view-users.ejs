<head>
  <style>
    .userlistfont{
      font-size: larger;
      font-family: unset;
    }
    .uservaluefont{
      font: caption;
      font-family: system-ui;
    }
  </style>
</head>

<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Users List</h2>
          <form
            action="/admin/add_sub"
            method="post"
            enctype="multipart/form-data"
          >
            
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- Table section -->
  <section  mx-auto>
    <div class="card-body">
      <div class="row mt-5 mx-auto">
        <div class="table-responsive">
          <div class="table-responsive">
            <table class="table align-middle table-nowrap mb-0">
              <thead class="table-light">
                <tr class="userlistfont">
                  <th class="align-middle " scope="col">No:</th>
                  <th class="align-middle" scope="col">First Name</th>
                  <th class="align-middle" scope="col">Last Name</th>
                  <th class="align-middle" scope="col">Email</th>
                  <th class="align-middle" scope="col">Phone Number</th>
                  <th class="align-middle" scope="col">Status</th>
                  <th class="align-middle" scope="col">Options</th>
                </tr>
              </thead>
              <tbody>
                <% allUsers.forEach(function(allUsers,index) { %>
                <tr class="uservaluefont">
                  <td> <%=index+1 %> </td>
                  <td><%= allUsers.firstName %></td> 
                  <td><%= allUsers.lastName %></td>
                  <td><%= allUsers.email %></td>
                  <td><%= allUsers.phonenumber %></td>
                  <td>
                    <%if(allUsers.userBlockStatus){%>
                      <p class="text-danger uservaluefont">Inactive</p> 
                      <%}else{%>
                          <p class="text-success uservaluefont">Active</p> 
                      <%} 
                        
                    %>
                  </td>
                  <td>
                      <%if(allUsers.userBlockStatus==true){%>
                        
                        <a href ="/admin/unblock-users/<%= allUsers._id %>" class="btn btn-success" onclick="return confirm('Do you want to unblock <%= allUsers.firstName %> ?')">UnBlock</a>
                 
                        
                      <%}
                      else{%>
                        <a href ="/admin/block-users/<%= allUsers._id %>" class="btn btn-danger" onclick="return confirm('Do you want to block <%= allUsers.firstName %> ?')">Block</a>

              
                      <%}
                        %>



                  </td>
    
                 
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- table-responsive end// -->
      </div>
    </div>
  </section>
  