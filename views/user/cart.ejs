<script>
    function availableCoupon() {
        $.ajax({
            url: '/availableCoupen',
            type: 'get',
            data: {
            },
            success: function (response) {
                console.log(response);
                let coupons = ''
                for (let i = 0; i < response.length; i++) {
                    const ele = response[i];
                    coupons += `
        <li>
            <h4><a href=""  onclick="copyCouponCode(event,'${ele.couponCode}','${ele.maxDiscountAmount}','${ele.discountPercentage}')">${ele.couponCode}</a></h4>
               
                <p>${ele.discountPercentage}% discount with a maximum cashback Upto ${ele.maxDiscountAmount}</p>
                <p>${ele.description} for a minimum purchace of ₹${ele.minAmount}</p>
                <p>Valid till: ${ele.endDate}</p>
        </li>
        <hr>

        `
                };
                $('#coupenInnerHtmlId').html(coupons)
            }
        });
    }

    function copyCouponCode(e, coupenCode,maxDiscountAmount,discountPercentage) {
        e.preventDefault()
        console.log(coupenCode);
        $('#available-coupons').modal('hide');
        let input = document.getElementById("coupenfeildId")
        input.value = coupenCode;
        maxDiscountAmount = parseInt(maxDiscountAmount)
        discountPercentage = parseInt(discountPercentage)

        let grandTotal = document.getElementById("subtotal").innerHTML
        grandTotal = parseInt(grandTotal)

        let discountAmount = Math.floor((grandTotal/discountPercentage))
        if(discountAmount > maxDiscountAmount){
            discountAmount = maxDiscountAmount
        }
        grandTotal = grandTotal-discountAmount

        $.ajax({
            url: '/availableCoupen',
            type: 'post',
            data: {
                grandTotal,
                discountAmount,
                coupenCode
            },
            success: function (response) {
                console.log("availableCoupen post : ",response);
                if(response.ok){

                    itemElement = document.getElementById("couponStatus")
                    itemElement.classList.add('text-success');
                    itemElement.innerHTML = 'Coupon applied..!'
                    setTimeout(function(){document.getElementById('couponStatus').innerHTML = ''},3000)
                    document.getElementById("discountAmount").innerHTML = '₹'+String(discountAmount)
                    document.getElementById("subtotal2").innerHTML = '₹'+String(grandTotal)
                }else if(response.exist){
                    itemElement = document.getElementById("couponStatus")
                    itemElement.classList.remove('text-success');
                    itemElement.classList.add('text-danger');
                    itemElement.innerHTML = 'Coupon already used..!'
                    setTimeout(function(){document.getElementById('couponStatus').innerHTML = ''},3000)
                }
              
            }
        });


    }

    function removeCoupon(){
        let coupon = document.getElementById("coupenfeildId").value
        console.log(coupon);
        $.ajax({
            url: '/removeCoupen',
            type: 'post',
            data: {
                coupon
            },
            success: function (response) {
                console.log(response);
                if(response.ok){

                    document.getElementById("discountAmount").innerHTML = '₹0.00'
                    document.getElementById("subtotal2").innerHTML = '₹'+document.getElementById("subtotal").innerHTML
                    document.getElementById("coupenfeildId").value = ''
                    itemElement = document.getElementById("couponStatus")
                    itemElement.classList.remove('text-success');
                    itemElement.classList.add('text-danger');
                    itemElement.innerHTML = 'Coupon removed..!'
                    setTimeout(function(){document.getElementById('couponStatus').innerHTML = ''},3000)
                }
              
            }
        });
    }

</script>