                                                            <%}else{%>

                                                                <button
                                                                    onclick="cartquantitydown('<%=cart.product[i].product_id._id%>',' <%=cart.product[i].product_id.price %> ','<%=cart.product[i].product_id.product_name %>','<%=cart.product[i].product_id.product_details[0].quantity %>')"
                                                                    style="border: 0;height: 2em; width: 2em;"> -
                                                                </button>
                                                                <%}%>

                                                                    <p id="<%=cart.product[i].product_id._id%>"
                                                                        class="mx-2">
                                                                        <%=cart.product[i].quantity %>
                                                                    </p>
                                                                    <%if(cart.product[i].product_id.discountPrice){%>
                                                                        <button
                                                                            id="<%=cart.product[i].product_id.product_details[0].quantity %>"
                                                                            onclick="cartquantityplus('<%=cart.product[i].product_id._id%>',' <%=cart.product[i].product_id.discountPrice %> ','<%=cart.product[i].product_id.product_name %>','<%=cart.product[i].product_id.product_details[0].quantity %>')"
                                                                            style="border: 0;height: 2em; width: 2em;">
                                                                            + </button>
                                                                        <%}else{%>

                                                                            <button
                                                                                id="<%=cart.product[i].product_id.product_details[0].quantity %>"
                                                                                onclick="cartquantityplus('<%=cart.product[i].product_id._id%>',' <%=cart.product[i].product_id.price %> ','<%=cart.product[i].product_id.product_name %>','<%=cart.product[i].product_id.product_details[0].quantity %>')"
                                                                                style="border: 0;height: 2em; width: 2em;">
                                                                                + </button>
                                                                            <%}%>

                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Cart">
                                                    <span id="<%=cart.product[i].product_id.product_name %>">
                                                        ₹<%=cart.product[i].sub_total %>
                                                    </span>
                                                </td>
                                                <td class="action" data-title="Remove"><a href="#" class="text-muted"><i
                                                            class="fi-rs-trash" id="delete"
                                                            onclick="deleteProduct('<%=cart.product[i].product_id._id%>')"></i></a>
                                                </td>
                                            </tr>

                                            <%} %>
                                                <%} %>





                                                    <% if(count!=null){%>
                                                        <tr>
                                                            <td colspan="6" class="text-end">
                                                                <a href="#" class="text-muted"> <i
                                                                        class="fi-rs-cross-small"></i> Clear Cart</a>
                                                            </td>
                                                        </tr>

                                                        <%} %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="cart-action text-end">
                                <a href="/cart" class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Update
                                    Cart</a>
                                <a href="/shop" class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue
                                    Shopping</a>
                            </div>
                            <div class="divider center_icon mt-50 mb-50"></div>
                            <div class="row mb-50">
                                <div class="col-lg-6 col-md-12">
                        <% if(count!=null){%>
                                    <div class="mb-30 mt-50">
                                        <div class="heading_s1 mb-3">
                                            <h4>Apply Coupon</h4>
                                        </div>
                                        <div>
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#available-coupons"
                                                data-bs-whatever="@mdo" id="couponButton" onclick="availableCoupon()"><i
