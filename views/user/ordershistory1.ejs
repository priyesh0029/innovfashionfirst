<body>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Order detail</h2>
                <p>Details for Order ID: <%=order._id %>
                </p>
            </div>
        </div>
        <div class="card">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                        <span>
                            <i class="material-icons md-calendar_today"></i> <b>
                                <%=order.createdAt %>
                            </b>
                        </span> <br>
                        <small class="text-muted">Order ID: <%=order._id %></small>
                    </div>
                    <div class="col-lg-6 col-md-6 ms-auto text-md-end" id="orderStatusAmendingId">

                        <!-- Button trigger modal -->
                        <% if(order.orderStatus==="cancelled" ){%>
                            <p class="badge rounded-pill alert-danger text-danger">Order Status: <%=order.orderStatus %>
                            </p><br>
                            <p>cancellation reason : <%=order.cancellationReason%>
                            </p>
                            <%}else if(order.orderStatus==="Delivered" ){%>
                                <button type="button" class="btn btn-success" data-toggle="modal"
                                    data-target="#exampleModal">
                                    Return order
                                </button>
                                <%}else if(order.orderStatus==="returned" ){%>
                                    <p class="badge rounded-pill alert-success text-success">Order Status:
                                        <%=order.orderStatus %>
                                    </p><br>
                                    <p>return reason : <%=order.returnedReason%>
                                    </p>
                                    <%}else{%>

                                        <button type="button" class="btn btn-danger" data-toggle="modal"
                                            data-target="#exampleModal">
                                            cancel order
                                        </button>
                                        <%} %>
                                            <a class="btn btn-secondary print ms-2" href="#"><i
                                                    class="icon material-icons md-print"></i></a>
                    </div>
                </div>
            </header> <!-- card-header end// -->
            <div class="card-body">
                <div class="row mb-50 mt-20 order-info-wrap">


                    <div class="col-md-4">
                        <article class="icontext align-items-start">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="text-primary material-icons md-place"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Deliver to</h6>
                                <p class="mb-1">
                                    <%=order.shippingAddress.name %>,<%=order.shippingAddress.phonenumber %> <br>
                                            <%=order.shippingAddress.addressLine %>, <%=order.shippingAddress.city %>
                                                    <br>(near)<%=order.shippingAddress.landmark %>,
                                                        <%=order.shippingAddress.state %>,
                                                            <%=order.shippingAddress.pincode %> <br> (alt-PH)
                                                                <%=order.shippingAddress.altPhone %>
                                </p>
                            </div>
                        </article>
                    </div> <!-- col// -->
                </div> <!-- row // -->
                <div class="row">
                    <div class="col-lg-7">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th width="40%">Product</th>
                                        <th width="20%">Unit Price</th>
                                        <th width="20%">Quantity</th>
                                        <th width="20%" class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let j=0;j < order.products.length;j++){%>
                                        <tr>
                                            <td>
                                                <a class="itemside" href="#">
                                                    <div class="left">
                                                        <img src="/uploads/<%=order.products[j].Image[0] %>" width="40"
                                                            height="40" class="img-xs" alt="Item">
                                                    </div>
                                                    <div class="info">
                                                        <%=order.products[j].sub_catagory %>
                                                            <%=order.products[j].color[j] %>, <%=order.products[j].size
                                                                    %> size[j]
                                                    </div>
                                                </a>
                                            </td>
                                            <td> ₹ <%=order.products[j].unitPrice[j] %>
                                            </td>
                                            <td>
                                                <%=order.products[j].quantity[j] %>
                                            </td>
                                            <td class="text-end"> ₹<%=order.products[j].subTotal[j] %>
                                            </td>
                                        </tr>
                                        <%} %>
                                            <tr>
                                                <td colspan="4">
                                                    <article class="float-end">
                                                        <dl class="dlist">
                                                            <dt>Subtotal:</dt>
                                                            <% let total=0; %>
                                                                <% for(let i=0; i < order.products[0].subTotal.length;i++) { %>
                                                                    <% total +=parseInt(order.products[0].subTotal[i]);
                                                                        %>
                                                                        <% } %>
                                                                            <dd>₹<%= total %>.00</dd>
                                                        </dl>
                                                        <dl class="dlist">
                                                            <dt>Discount applied:</dt>
                                                            <dd>₹<%=order.couponDiscount %>.00</dd>
                                                        </dl>
                                                        <dl class="dlist">
                                                            <dt>Grand total:</dt>
                                                            <dd> <b class="h5">₹<%=order.totalPrice %>.00</b> </dd>
                                                        </dl>
                                                        <dl class="dlist" id="orderStausDownId">
                                                            <dt class="text-muted">Order Status:</dt>
                                                            <dd>
                                                                <% if(order.orderStatus==="cancelled" ){%>
                                                                    <span
                                                                        class="badge rounded-pill alert-danger text-danger">
                                                                        <%=order.orderStatus%>
                                                                    </span>
                                                                    <%}else{%>
                                                                        <span
                                                                            class="badge rounded-pill alert-success text-success">
                                                                            <%=order.orderStatus%>
                                                                        </span>
                                                                        <%} %>

                                                            </dd>
                                                        </dl>
                                                    </article>
                                                </td>
                                            </tr>
                                </tbody>
                            </table>
                        </div> <!-- table-responsive// -->
                    </div> <!-- col// -->
                    <div class="col-lg-1"></div>
                    <div class="col-lg-4">
                        <div class="box shadow-sm bg-light">
                            <h6 class="mb-15">Payment info</h6>
                            <!-- <p>
                                    <img src="assets/imgs/card-brands/2.png" class="border" height="20"> Master Card **** **** 4768 <br>
                                    Business name: Grand Market LLC <br>
                                    Phone: +1 (800) 555-154-52
                                </p> -->
                            <dl class="dlist">
                                <dt>payment method :</dt>
                                <dd> <b class="h5">
                                        <%=order.paymentMethod %>
                                    </b> </dd>
                            </dl>
                            <dl class="dlist">
                                <dt>Payment Status :</dt>
                                <dd id="paymentStatusID">
                                    <% if(order.orderStatus==="cancelled" || order.orderStatus==="returned" &&
                                        !order.refundStatus && order.paymentStatus==="pending" ||
                                        order.paymentMethod==="COD" ){%>
                                        <span></span>
                                        <%}else if(order.orderStatus==="returned" && order.refundStatus){%>
                                            <span class="badge rounded-pill alert-success text-success">Refunded</span>
                                            <%}else if(order.orderStatus==="cancelled" && !order.refundStatus ){%>
                                                <span class="badge rounded-pill alert-danger text-danger">Refund
                                                    failed</span>
                                                <%}else{%>
                                                    <span class="badge rounded-pill alert-success text-success">
                                                        <%=order.paymentStatus %>
                                                    </span>
                                                    <%} %>
                                </dd>
                            </dl>
                        </div>

                    </div> <!-- col// -->
                </div>
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->
    </section> <!-- content-main end// -->

    <!-- modal-order-cancellation-start -->
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <%if(order.orderStatus==="Delivered" ){%>
                        <h5 class="modal-title" id="exampleModalLabel">Reason for order Return</h5>
                        <%}else{%>
                            <h5 class="modal-title" id="exampleModalLabel">Reason for order cancellation</h5>
                            <%} %>

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                </div>
                <form id="orderCancellationForm">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1"
                            value="changed my mind">
                        <label class="form-check-label" for="exampleRadios2">
                            changed my mind
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2"
                            value="item received with wrong size">
                        <label class="form-check-label" for="exampleRadios2">
                            item received with wrong size
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3"
                            value="product looks different from ordered item">
                        <label class="form-check-label" for="exampleRadios2">
                            product looks different from ordered item
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios4"
                            value="item received with different color">
                        <label class="form-check-label" for="exampleRadios2">
                            item received with different color
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios5"
                            value=" found same product in low price">
                        <label class="form-check-label" for="exampleRadios2">
                            found same product in low price
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios6"
                            value=" other reasons">
                        <label class="form-check-label" for="exampleRadios2">
                            other reasons
                        </label>
                    </div>

                    <div class="modal-footer">
                        <%if(order.orderStatus==="Delivered" ){%>
                            <button class="btn btn-primary" data-dismiss="modal"
                                onclick="orderCancellation(event,'<%=order._id%>','return')">submit</button>
                            <%}else{%>
                                <button class="btn btn-primary" data-dismiss="modal"
                                    onclick="orderCancellation(event,'<%=order._id%>')">submit</button>
                                <%} %>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- modal-order-cancellation-end -->


    <script>
        function orderCancellation(e, orderId, orderStatus = null) {
            e.preventDefault()
            console.log("orderStatus : ", orderStatus);
            const form = $('#orderCancellationForm').serializeArray()
            console.log("form :", form);
            $.ajax({
                url: '/orderCancellation',
                type: 'post',
                data: {
                    orderId,
                    reason: form[0].value,
                    orderStatus
                },
                success: function (response) {
                    console.log("success1");
                    if (response.ok) {
                        if (orderStatus !== null) {
                            swal({
                                title: "Order Returned Successfully!",
                                text: "The refund amound will be credited back to your InfoFashion wallet shortly..!",
                                icon: "success",
                            });
                        } else {

                            swal({
                                title: "Order cancelled!",
                                text: "The refund amound will be credited back to your InfoFashion wallet shortly..!",
                                icon: "success",
                            });
                        }
                        $(document).ready(function () {
                            setTimeout(function () {
                                $('#orderStatusAmendingId').load(window.location.href + ' #orderStatusAmendingId');
                                $('#orderStausDownId').load(window.location.href + ' #orderStausDownId');
                                $('#paymentStatusID').load(window.location.href + ' #paymentStatusID');
                            }, 0)
                        })
                    }
                },
                error: function (err) {
                    console.log("error err : ", err);
                    if (err.responseJSON.err1) {
                        swal({
                            title: err.responseJSON.err1,
                            icon: "warning",
                        });
                    } else if (err.responseJSON.err2) {

                        swal({
                            title: "Order cancelled!",
                            text: err.responseJSON.err2,
                            icon: "warning",
                        });
                        $(document).ready(function () {
                            setTimeout(function () {
                                $('#orderStatusAmendingId').load(window.location.href + ' #orderStatusAmendingId');
                                $('#orderStausDownId').load(window.location.href + ' #orderStausDownId');
                                $('#paymentStatusID').load(window.location.href + ' #paymentStatusID');
                            }, 0)

                        })
                    }
                }
            });
        }
    </script>

</body>